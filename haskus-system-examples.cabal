      ,  bytestring
      ,  haskus-system
      ,  haskus-utils
      ,  haskus-binary
      ,  transformers
      ,  JuicyPixels
      ,  diagrams-lib
      ,  containers
      ,  colour
   default-language:    Haskell2010
   ghc-options: -Wall -O3 -static -threaded
   cc-options: -static -O3
   ld-options: -static -pthread
   extra-lib-dirs: ./usr/lib

