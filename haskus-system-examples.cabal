name:                haskus-system-examples
version:             0.1.0.0
author:              Sylvain Henry
maintainer:          sylvain@haskus.fr
build-type:          Simple
cabal-version:       >=1.10

executable Build
   main-is: Build.hs
   hs-source-dirs: src
   build-depends:
         base >=4.8
      ,  process
      ,  shake

   default-language:    Haskell2010
   ghc-options:         -Wall -threaded

executable HelloWorld
   main-is: HelloWorld.hs
   hs-source-dirs: src
   build-depends:
         base >=4.8
      ,  haskus-system
   default-language:    Haskell2010
   ghc-options: -Wall -static -threaded
   cc-options: -static
   ld-options: -static -pthread
   extra-lib-dirs: ./usr/lib

